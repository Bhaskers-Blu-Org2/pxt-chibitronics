{
    "id": "chibitronics",
    "nickname": "chibitronics",
    "name": "chibitronics.pxt.io",
    "title": "chibitronics.pxt.io - Blocks / Javascript editor for chibitronics",
    "description": "A Blocks / JavaScript code editor for the chibitronics.",
    "corepkg": "core",
    "cloud": {
        "workspace": false,
        "packages": false,
        "sharing": true,
        "publishing": true,
        "githubPackages": true
    },
    "bundleddirs": [
        "libs/core"
    ],
    "compile": {
        "isNative": false,
        "hasHex": true,
        "deployDrives": "(MICROBIT|MBED)",
        "driveName": "MICROBIT",
        "hexMimeType": "application/x-microbit-hex",
        "openocdScript": "source [find interface/cmsis-dap.cfg]; source [find target/nrf51.cfg]",
        "upgrades": [
            {
                "type": "package",
                "map": {
                    "ltc": "core"
                }
            }
        ]
    },
    "runtime": {
        "mathBlocks": true,
        "loopsBlocks": true,
        "logicBlocks": true,
        "variablesBlocks": true,
        "onStartColor": "#0078D7",
        "onStartNamespace": "basic",
        "onStartWeight": 54
    },
    "simulator": {
        "autoRun": true,
        "streams": false,
        "aspectRatio": 1.22,
        "parts": true,
        "partsAspectRatio": 0.69,
        "boardDefinition": {
            "visual": "ltc",
            "gpioPinBlocks": [
                [
                    "D0"
                ],
                [
                    "D1"
                ],
                [
                    "D2"
                ],
                [
                    "D3"
                ],
                [
                    "D4"
                ],
                [
                    "D5"
                ]
            ],
            "gpioPinMap": {
                "D0": "D0",
                "D1": "D1",
                "D2": "D2",
                "D3": "D3",
                "D4": "D4",
                "D5": "D5"
            },
            "analogInPins": [
                "A0",
                "A1",
                "A2",
                "A3",
                "A4",
                "A5"
            ],
            "groundPins": [
                "GND"
            ],
            "threeVoltPins": [
                "+3v3"
            ],
            "attachPowerOnRight": true,
            "onboardComponents": [
                "neopixel"
            ],
            "useCrocClips": true,
            "marginWhenBreadboarding": [
                0,
                0,
                80,
                0
            ]
        }
    },
    "compileService": {
        "yottaTarget": "chibitronics-ltc-gcc",
        "yottaCorePackage": "chibitronics",
        "githubCorePackage": "xobs/pxt-ltc-core",
        "gittag": "v0.0.11-broken-ltc",
        "serviceId": "foobar9"
    },
    "appTheme": {
        "accentColor": "#5C005C",
        "logoUrl": "http://chibitronics.com/",
        "logo": "./static/chibitronics_logo_white.svg",
        "docsLogo": "./static/logo.square.white.svg",
        "portraitLogo": "./static/logo.square.white.svg",
        "footerLogo": "./static/logo.portrait.white.svg",
        "organization": "Microsoft",
        "organizationUrl": "https://pxt.io/",
        "organizationLogo": "./static/Microsoft-logo_rgb_c-gray-square.png",
        "organizationWideLogo": "./static/Microsoft-logo_rgb_c-white.png",
        "homeUrl": "https://chibitronics.pxt.io/",
        "embedUrl": "https://chibitronics.pxt.io/",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "githubUrl": "https://github.com/Microsoft/pxt-chibitronics",
        "crowdinProject": "kindscript",
        "boardName": "chibitronics",
        "docMenu": [
            {
                "name": "About",
                "path": "/about"
            },
            {
                "name": "Docs",
                "path": "/docs"
            }
        ],
        "invertedMenu": true,
        "coloredToolbox": true,
        "monacoToolbox": true,
        "hasAudio": false,
        "blocklyOptions": { 
            "grid": {
                "spacing": 45,
                "length": 7,
                "colour": "rgba(189, 195, 199, 0.30)",
                "snap": true
            }
        },
        "simAnimationEnter": "fly down in",
        "simAnimationExit": "fly up out"
    }
}